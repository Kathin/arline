.main-page
  .pageslist
    display table
    width 100%
    h4
      padding 10px 10px
      display inline-block
      border 1px solid blue
      border-radius 10px
      margin 20px 0
    &__item
      display table-row
      box-sizing border-box
      &-img
        display table-cell
        padding 20px 0
        border-bottom 1px solid #542a00
        width 40%
        a
          display block
          max-height 600px
          overflow hidden
        img 
          max-width 300px
      &-url
        display table-cell
        width 60%
        padding 20px 0
        border-bottom 1px solid #542a00
        font-size 30px
        img 
          display block
          max-width 100%
          margin-top 30px