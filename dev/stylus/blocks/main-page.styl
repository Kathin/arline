.main-page
  background-image linear-gradient(60deg, rgba(255,255,255,1) 21%, rgba(243,240,254,1) 100%)/*rgba(243,240,254,1)*/
  .preview
    padding-top 77px
    background-image url(../img/bg_top.png)
    background-repeat no-repeat
    background-position calc(50% + 401px) 0
    font-size 0
    padding-bottom 82px
    &:after
      content ''
      width 100%
      clear both
      display block
      float none
      height 0px
      position relative
    &__left
      padding-top 155px
      display inline-block
      vertical-align top 
      width 42.5%
      position relative
      z-index 1
    &__right
      padding-top 95px
      display inline-block
      vertical-align top 
      width 57.5%
      position relative
      z-index 1
    &__subtitle
      font-size 16px
      font-weight bold
      line-height 18px
      text-transform uppercase
      padding-bottom 35px
      color $purple
    &__title
      font-size 45px
      font-weight bold
      line-height 55px
      padding-bottom 15px
      color $black
    &__text
      font-size 16px
      line-height 18px
      padding-bottom 50px
      color $gray
    &__img
      float right
      border-radius 24px
      overflow hidden
      line-height 0
      background-color rgb(113, 54, 226)
      box-shadow 0px 28px 64.68px 19.32px rgba(0, 0, 0, 0.27)
    &__form
      &-input
        display inline-block
        border 1px solid #dcdcdc
        border-radius 27.5px
        font-size 16px
        line-height 16px
        padding 20px 80px 19px 34px
        width 380px
        box-sizing border-box
        height 55px
        position relative
        z-index 1
        vertical-align top
      &-button
        vertical-align top
        display inline-block
        border-radius 27.5px
        position relative
        font-size 16px
        height 55px
        line-height 16px
        text-align center
        padding 20px 25px 19px
        color #fff
        z-index 2
        cursor pointer
        box-sizing border-box
        font-weight 500
        margin-left -72px
        background #6841f2
        background linear-gradient(to right, rgba(104,65,242,1) 8%,rgba(104,65,242,1) 8%,rgba(113,54,226,1) 100%)
        &:hover
          background #6841f2
    &__arrow
      margin 43px auto 0
      position relative
      width 32px
      height 55px
      display block
      transition all $speed
      &:hover
        opacity 0.8        
      img 
        width 100%
        height 100%
  .principles
    &__title
      margin-bottom 45px
    &__list
      font-size 0
      line-height 0
      &-item
        width 25%
        display inline-block
        vertical-align top
        padding-left 100px
        box-sizing border-box
        &:first-child
          padding 0          
          width calc(25% - 49px)
        &:nth-child(2)
          width calc(25% + 34px)  
        &:last-child
          padding-left 89px
          width calc(25% + 15px)                   
        &-title 
          font-size 18px
          line-height 24px
        &-img
          width 96px
          margin-bottom 24px
          img 
            width 100%
        &-text
          font-size 16px
          line-height 24px
          color #c0bfc5
          margin-top 12px
  .using
    background url('/img/tabs.png') no-repeat calc(50% - 476px) -7px
    padding-top 145px
    min-height 860px
    .container
      box-sizing border-box
      padding-left 35.4%     
    &__title
      margin-bottom 45px
    &__tabs
      display block
      &-titles
        font-size 0
        line-height 0
        border-radius 27.5px
        border 1px solid #dcdcdc
        margin-bottom 74px
        background #fff
        &-item 
          display inline-block
          vertical-align top
          line-height 55px
          height 55px
          font-size 16px
          color $gray
          background #fff
          padding 0 24px
          border-radius 27.5px
          transition all $speed
          &:hover
            color $purple
            cursor pointer
          &.active
            color #ffffff
            background $purple
      &-content
        &-item
          display none
          position relative
          &.active
            display block
        &-about
          &-title
            font-size 38px
            font-weight bold
            line-height 38px
            margin-bottom 10px
          &-text
            color $gray
            font-size 16px
            line-height 24px
            padding-left 35px
            max-width 620px
            position relative
            &:before
              content ''
              width 1px
              background $purple
              height calc(100% - 8px) 
              position absolute
              top 50%
              transform translateY(-50%)
              left 0 
        &-img
          position absolute 
          box-shadow 0px 19px 46px 0px rgba(0, 0, 0, 0.23)
          overflow hidden
          border-radius 24px
          top 105px
          left -345px
        &-arrow
          top 247px
          position absolute
          color $gray
          font-size 16px
          line-height 24px
          padding-left 232px
          background url('/img/arrow-tabs.png') no-repeat 0 10px
          height 130px
          
                 
      
          
            
          
          
          
          
      