.main-page
  background-image linear-gradient(60deg, rgba(255,255,255,1) 21%, rgba(243,240,254,1) 100%)/*rgba(243,240,254,1)*/
  .preview
    padding-top 77px
    background-image url(../img/bg_top.png)
    background-repeat no-repeat
    font-size 0
    padding-bottom 82px
    +a($t)
      background-position calc(50% + 401px) 0
    +b($t)
      background-position calc(50% + 572px) 0
    &:after
      content ''
      width 100%
      clear both
      display block
      float none
      height 0px
      position relative
    &__left
      vertical-align top 
      position relative
      z-index 1
      +a($t)
        width 42.5%   
        display inline-block
        padding-top 155px     
      +b($t)
        width 100%   
        display block 
        padding-top 61px   
    &__right
      vertical-align bottom
      position relative
      z-index 1
      +a($t)
        display inline-block
        width 57.5%
        padding-top 95px
      +btw($m, $t)
        width 100%   
        display block 
        padding-top 55px
      +b($m)
        width 100%   
        display block 
        padding-top 36px
    &__subtitle
      font-weight bold
      text-transform uppercase
      padding-bottom 35px
      color $purple
      +a($m)
        font-size 16px
        line-height 18px
      +b($m)
        font-size 11px
        line-height 15px
        text-shadow 0px 0px 2px #fff 
    &__title
      font-weight bold
      padding-bottom 15px
      color $black
      max-width 581px
      +a($m)
        line-height 55px
        font-size 45px
      +b($m)
        line-height 33px
        font-size 27px
    &__text
      font-size 16px
      line-height 18px
      color $gray
      +a($m)
        padding-bottom 50px
      +b($m)
        padding-bottom 30px
    &__img
      float right
      overflow hidden
      line-height 0
      background-color rgb(113, 54, 226)
      box-shadow 0px 28px 64.68px 19.32px rgba(0, 0, 0, 0.27)
      margin-left 30px
      +a($t)
        max-width 100% 
        border-radius 24px       
      +btw($m, $t)
        width 100%
        border-radius 24px   
      +b($m)
        border-radius 13px 
        width 100%      
      img 
        width 100%
    &__form 
      width 100%  
      max-width 515px 
      position relative
      &-input
        display inline-block
        border 1px solid #dcdcdc
        border-radius 27.5px
        padding 20px 220px 19px 34px
        //width 380px
        width 100%
        max-width 515px
        box-sizing border-box
        height 55px
        position relative
        z-index 1
        vertical-align top    
        .input__placeholder
          color $gray
        input:-webkit-autofill
          -webkit-text-fill-color $black
      &-button
        vertical-align top
        border-radius 27.5px
        //position relative
        font-size 16px
        height 55px
        line-height 16px
        text-align center
        padding 20px 25px 19px
        color #fff
        z-index 2
        cursor pointer
        box-sizing border-box
        font-weight 500
        //margin-left -72px
        background #6841f2
        right 0
        background linear-gradient(to right, rgba(104,65,242,1) 8%,rgba(104,65,242,1) 8%,rgba(113,54,226,1) 100%) 
        +a($m)
          display inline-block 
          position absolute         
        +b($m)  
          width 100%
          display block 
          position relative
          margin-top 15px
        &:hover
          background #6841f2
    &__arrow
      margin 43px auto 0
      position relative
      width 32px
      height 55px
      transition all $speed
      +a($t)
        display block
      +b($t)
        display none
      &:hover
        opacity 0.8        
      img 
        width 100%
        height 100%
  .principles
    &__title
      margin-bottom 45px
    &__list
      font-size 0
      line-height 0
      &-item
        display inline-block
        vertical-align top
        box-sizing border-box
        +a($t)
          width 25%
          padding-left 100px
          &:first-child
            padding 0          
            width calc(25% - 49px)
          &:nth-child(2)
            width calc(25% + 34px)  
          &:last-child
            padding-left 89px
            width calc(25% + 15px)     
        +b($t) 
          width 50%  
          padding-left 55px 
          margin-bottom 45px
          &:nth-child(2n+1)
            padding 0          
            width calc(50% - 49px)            
        &-title 
          font-size 18px
          line-height 24px
        &-img
          width 96px
          margin-bottom 24px
          img 
            width 100%
        &-text
          font-size 16px
          line-height 24px
          color #c0bfc5
          margin-top 12px
  .using
    background url('../img/tabs.png') no-repeat calc(50% - 476px) -7px
    padding-top 145px
    min-height 860px
    .container
      box-sizing border-box
      padding-left 628px    
    &__title
      margin-bottom 45px
    &__tabs
      display block
      &-titles
        font-size 0
        line-height 0
        border-radius 27.5px
        border 1px solid #dcdcdc
        margin-bottom 74px
        background #fff
        white-space nowrap
        &-item 
          display inline-block
          vertical-align top
          line-height 55px
          height 55px
          font-size 16px
          color $gray
          background #fff
          padding 0 24px
          border-radius 27.5px
          transition all $speed
          &:hover
            color $purple
            cursor pointer
          &.active
            color #ffffff
            background $purple
            &:hover
              color #ffffff              
      &-content
        &-item
          display none
          position relative
          &.active
            display block
        &-about
          &-title
            font-size 38px
            font-weight bold
            line-height 38px
            margin-bottom 10px
          &-text
            color $gray
            font-size 16px
            line-height 24px
            padding-left 35px
            max-width 620px
            position relative
            &:before
              content ''
              width 1px
              background $purple
              height calc(100% - 8px) 
              position absolute
              top 50%
              transform translateY(-50%)
              left 0 
        &-img
          position absolute 
          box-shadow 0px 19px 46px 0px rgba(0, 0, 0, 0.23)
          overflow hidden
          border-radius 24px
          top 105px
          left -345px
          font-size 0
          line-height 0
        &-arrow
          top 247px
          position absolute
          color $gray
          font-size 16px
          line-height 24px
          padding-left 232px
          background url('../img/arrow-tabs.png') no-repeat 0 10px
          height 135px
  .sphere
    &__title
      margin-bottom 18px
    &__text
      color $gray
      font-size 16px
      line-height 24px
    &__list
      padding-top 40px
      font-size 0
      line-height 0
      &-item 
        display inline-block
        vertical-align top
        text-decoration none
        text-align center
        border 1px solid #e8e8e8
        background #fff
        padding-top 78px
        box-sizing border-box
        width 31.8%        
        height 415px
        margin-left 2.3%
        border-radius 24px
        &:first-child
          margin-left 0
        /*&:hover
          box-shadow 0px 0px 46px 0px rgba(0, 0, 0, 0.19)
