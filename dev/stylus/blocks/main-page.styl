        &-block
          display inline-block
          vertical-align top
          background-color #fff
          background-image url('../img/price-block.png')
          background-position 307px 48px
          background-repeat no-repeat
          border-radius 24px
          border 1px dolid #dcdcdc
          box-shadow 0px 0px 46px 0px rgba(0, 0, 0, 0.19)
          width 31.8%        
          height 430px
          margin-left 2.3%
          border-radius 24px
          padding 70px 43px 0
          box-sizing border-box
          &:first-child
            margin-left 0
          &-title
            font-size 38px 
            line-height 38px
            font-weight bold
            margin-bottom 5px
          &-text
            font-size 16px 
            line-height 36px
            color $gray
          &-price
            font-size 30px 
            line-height 48px
            font-weight bold
            color #6841f1
          &-list            
            font-size 16px 
            line-height 36px
            color $gray
            padding-left 35px 
            position relative
            img 
              position absolute
              left 0
              top 50%
              transform translateY(-50%)
          &-button
            vertical-align top
            display inline-block
            border-radius 27.5px
            position relative
            font-size 16px
            height 55px
            line-height 16px
            text-align center
            padding 20px 25px 19px
            color $purple
            cursor pointer
            box-sizing border-box
            font-weight 500
            border 1px solid $purple
            background #fff
            text-decoration none
            transition all $speed
            margin-top 25px
            &:hover
              background $purple
              color #fff
              text-decoration none
