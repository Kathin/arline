    &__anons
      display inline-block
      vertical-align top
      width 436px
      background $purple
      border-radius 24px
      padding 60px 53px 57px
      box-sizing border-box
      color #fff
      &-title
        font-size 30px
        line-height 37px 
        font-weight bold
        color #fff
        margin-bottom 20px
      &-number
        font-size 72px
        line-height 72px
        margin-top 25px
        span 
          font-size 18px
          line-height 37px
          display block
  .prices
    margin-bottom 108px
    &__title
      margin-bottom 15px
    &__text
      font-size 16px
      line-height 24px
      color $gray
      position relative
      padding-left 35px
      &:before
        content ''
        width 1px
        background $purple
        height calc(100% - 8px) 
        position absolute
        top 50%
        transform translateY(-50%)
        left 0 
    &__tabs
      margin-top 30px
      &-titles
        font-size 0
        line-height 0
        border-radius 27.5px
        border 1px solid #dcdcdc
        display inline-block
        &-item 
          display inline-block
          vertical-align top
          line-height 55px
          height 55px
          font-size 16px
          color $gray
          padding 0 24px
          border-radius 27.5px
          transition all $speed
          &:hover
            color $purple
            cursor pointer
          &.active
            color #ffffff
            background $purple
            background-image -webkit-linear-gradient(left, #6538d8 8%,  #7136e2 100%)
            background-image -o-linear-gradient(left, #6538d8 8%, #7136e2 100%)
            background-image linear-gradient(to right, #6538d8 8%, #7136e2 100%)
            &:hover
              color #ffffff
      &-content
        margin-top 45px
        &-item
          font-size 0
          line-height 0
          display none
          &.active
