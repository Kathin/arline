  .features
    font-size 0
    line-height 0
    margin-bottom 50px
    &__title
      padding 42px 0 45px
    &__list
      display inline-block
      vertical-align top
      margin-right 35px
      width 895px
      &-item
        display inline-block
        vertical-align top
        width 250px
        margin-left 72.5px
        margin-bottom 52px
        &:nth-child(3n+1)
          margin-left 0
        &-img 
          margin-bottom 35px
