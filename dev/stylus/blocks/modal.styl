.modal
  background #fff
  text-align left
  transition 0.35s ease-in-out
  border-radius 11px
  position relative
  line-height 0
  font-size 0  
  overflow hidden
  &__close
    position absolute
    top 20px
    right 20px
    width 13px
    height 13px
    background url(../img/cross.png) no-repeat
    background-size 100%
    cursor pointer
    opacity 0.4
    z-index 4
    &:hover
      opacity 1
  &__img
    display inline-block
    vertical-align top
    width 622px
    position relative
    height 575px
    overflow hidden
    img 
      position absolute
      display block
      vertical-align middle    
      margin 0 auto 
      right 0
      left 0
      width 100%
  &__content
    display inline-block
    vertical-align top
    width 528px
    padding 72px 105px 0 53px
    box-sizing border-box
    min-height 575px
    position relative
    z-index 2
    &-subtitle
      font-size 16px
      line-height 18px
    &-title
      font-size 30px
      font-weight bold
      margin-top 10px
      line-height 24px
    &-share
      position absolute
      cursor pointer
      opacity 0.4
      width 19px
      height 21px
      top 74px
      right 112px
      &:hover
        opacity 1   
      img 
        width 100%
        height 100%   
    p 
      font-size 16px
      line-height 19px
      color $gray
      margin-top 15px
    &-download
      margin-top 35px
      &-title
        font-size 16px
        line-height 18px
        margin-bottom 21px
        font-weight bold
      &-button
        border 1px solid #6841f2
        border-radius 31.5px 
        font-size 16px
        line-height 20px
        padding 8px 22px 8px 53px
        color #6841f2
        position relative
        display inline-block
        img
          position absolute
          top 50%
          transform translateY(-50%)
          left 22px
        & + & 
          margin-left 17px
    &-make
      position absolute
      bottom 0px
      right 0px
      width 100%
      background #e5e7ec
      height 67px
      line-height 0
      font-size 0
      text-align center     
      &-title
        color $black
        display inline-block
        vertical-align top  
        width 416px 
        line-height 67px
        font-size 16px      
      &-button
        color #fff 
        background #6841f2
        display inline-block
        vertical-align top
        width 112px
        line-height 67px
        font-size 16px    
  &__message
    color $black
    font-size 20px
    text-align center
    line-height 24px
    font-weight bold
    padding 72px
    img 
      width 100px
      margin-top 40px

      