.text-page
  background-image linear-gradient(0deg, rgba(255,255,255,1) 40%, rgba(243,240,254,1) 100%)
  padding 150px 0  
  p
    font-size 16px
    line-height 24px
    text-align justify
    & + p
      padding-top 10px
  h1
    font-size 45px
    line-height 55px
    padding 20px 0 30px 
  h2
    font-size 32px
    line-height 40px
    padding-top 30px 
    padding-bottom 20px 
  ul, ol
    display block
    margin 0
    padding 0
    padding-top 5px
    padding-left 40px
    li
      font-size 16px
      line-height 24px
  
      