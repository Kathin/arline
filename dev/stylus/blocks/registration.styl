.registration-page
  background-image linear-gradient(22deg, rgba(255,255,255,1) 21%, rgba(243,240,254,1) 100%)
  padding-top 120px
  padding-bottom 60px
  text-align center
  &__form
    display inline-block
    vertical-align top
    background url("/img/form-support.png") no-repeat    
    padding 65px 120px
    box-sizing border-box
    background-size 100% 100%
    text-align left
    form         
      width 373px
      margin-top 26px
    &-title
      color #fff
      font-size 23px 
      line-height 55px 
      font-weight bold
    &-input
      color #fff
      border 1px solid #fff
      input
        color #fff 
        &:-webkit-autofill
          -webkit-text-fill-color #ffffff
      textarea
        color #fff 
      & + &
        margin-top 20px
      .input__error
        color #fff
        bottom -19px 
      & + .control-label__input 
        margin-top 20px  
        display block
    &-button
      vertical-align top
      display inline-block
      border-radius 27.5px
      position relative
      font-size 16px
      height 55px
      line-height 16px
      text-align center
      padding 20px 25px 19px
      color $purple
      cursor pointer
      box-sizing border-box
      font-weight 500
      background #fff
      transition all $speed
      border 1px solid #fff
      width 210px
      margin-top 20px
      &:hover
        text-decoration none 
        color #fff 
        background transparent
        border 1px solid #fff  
    &-url
      display block
      color #fff  
      font-size 14px
      line-height 24px
      margin-top 20px
      padding-left 34px
      font-style italic
      opacity 0.6
      text-align center
      a 
        color #fff        
