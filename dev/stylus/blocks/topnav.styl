.topnav
  display block !important
  background-size cover
  background-position center
  color $black  
  padding-top 35px
  height 77px
  width 100%
  position absolute
  top 0
  left 0
  z-index 8
  a 
    color $black
    &:hover
      color $purple
      text-decoration none
  .container
    position relative
    height 77px
    transition height $speed
    &:after
      content ""
      display table
      width 100%
      font 0/0 'a'  
  &__logo
    display inline-block
    will-change width
    position relative
    overflow hidden
    transition-property all
    transition-duration $speed * 2
    font-size 31px
    font-weight bold
    color $purple
    line-height 42px    
    vertical-align baseline 
    margin-top -24px  
    width 317px     
    &:hover 
      opacity 0.7
      color $purple
    img 
      width 100%
  &__list
    float right  
    line-height 0  
    &-item
      display inline-block
      line-height 42px
      font-size 16px
      margin 0 0 0 45px
      vertical-align baseline
      transition all $speed
      &.-active
        color $purple
      &.-translate
        display none
      &-language
        display none
        &.-active 
          display block
      &.-enter
        height 42px
        border 1px solid $purple
        border-radius 21px
        padding 0 20px
        box-sizing border-box  
        color $purple
        &:hover 
          background $purple
          color #fff
  &.-main 
    color #ffffff
    a.topnav__list-item 
      color #ffffff
      &:hover
        opacity 0.7
        color #ffffff
      &.-enter
        border 1px solid #fff
        color #ffffff
        &:hover
          opacity 1
          border 1px solid #fff
          background #fff
          color $purple
    .topnav__logo
      color $purple
      &:hover
        color $purple
    
       
    