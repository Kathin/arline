.header
  display block
  position relative
  background url('../img/back-header-main.png')
  height 50px
  background-size cover
  background-position center
  text-align center
  &__title
    display inline-block
    padding 7px 20px 5px
    vertical-align top
    color #ffffff
    font-size 20px
    line-height 18px
    letter-spacing 0.7px
    text-transform uppercase
    background rgba(0, 0, 0, .29)
    margin-top 10px
    font-weight lighter  
